<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <!-- Light Theme -->
        <ResourceDictionary x:Key="Light">
            <!-- App Hintergrund (Light): leicht off-white -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FCFCFF"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#0050F2" />
        </ResourceDictionary>

        <!-- Dark Theme -->
        <ResourceDictionary x:Key="Dark">
            <!-- App Hintergrund (Dark): softer als reines Schwarz -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#202222"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#0C59FF" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>